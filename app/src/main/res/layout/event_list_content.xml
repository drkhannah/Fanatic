<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/text_margin"
              android:orientation="vertical"

              >

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        style="@style/MyCardViewStyle"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                style="@style/TextAppearance.StatusBar.EventContent.Title"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/start_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                style="@style/TextAppearance.StatusBar.EventContent.Time"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/venue_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.StatusBar.EventContent"
                android:layout_margin="4dp"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>